{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

  
    "module": "commonjs",
    "target": "es2020",            
    "esModuleInterop": true,
    "moduleResolution": "node",      
    "resolveJsonModule": true,        
    "types": ["node"],


    "sourceMap": false,              
    "declaration": false,             
    "declarationMap": false,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["src"],                
  "exclude": ["node_modules", "dist"] 
}